@model IEnumerable<EntityLayer.Concrete.Food>

<button class="user_link btn bg-transparent " id="cart"><i class="fa fa-shopping-cart"></i> Cart </button>
<div class="shopping-cart">
    <div class="shopping-cart-header">
        <i class="fa fa-shopping-cart cart-icon"></i>
        <div>
            <h6 class="heading_container">Feane</h6>
        </div>
        @{ var totalprice = 0;}
    </div> <!--end shopping-cart-header -->
    @if (Model.Count() != 0)
    {
        @foreach (var item in Model)
        {


            <ul class="shopping-cart-items">
                <li class="clearfix">
                    <img src="@item.ImgPath" alt="@item.Name" />
                    <span class="item-name">@item.Name</span>
                    <span class="item-detail">@item.InCartQuantity</span>
                    <span class="item-price">$@item.Price</span>
                    @{totalprice += item.Price * item.InCartQuantity; }
                </li>
            </ul>


        }
    }
    else
    {
        <h6 class="mb-5">Cart Is Empty</h6>
    }
    <p class="cart-total">Total: $@totalprice</p>
    <button class="btn btn-outline-warning float-right">Checkout </button>
</div> <!--end shopping-cart -->
